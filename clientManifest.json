{
  "server": {
    "app": {
      "$filter": "env",
      "development": {
        "api": "http://localhost:3001",
        "isDevelopment": true
      },
      "production": {
        "api": "http://localhost:80",
        "isDevelopment": false
      }
    }
  },
  "connections": {
    "$filter": "env",
    "development": [{
      "port": 3004,
      "labels": ["web"]
    }],
    "production": [{
      "port": 80,
      "labels": ["web"]
    }]
  },
  "registrations": {
    "$filter": "env",
    "$base": [{
      "plugin": {
        "register": "good",
        "options": {
          "ops": {
            "interval": 30000
          },
          "reporters": {
            "console": [{
              "module": "good-squeeze",
              "name": "Squeeze",
              "args": [{ "log": "*", "request": "*", "response": "*", "error": "*", "ops": "*" }]
            }, {
              "module": "good-console"
            }, "stdout"],
            "file": [{
              "module": "good-squeeze",
              "name": "Squeeze",
              "args": [{ "error": "*" }]
            }, {
              "module": "good-squeeze",
              "name": "SafeJson"
            }, {
              "module": "good-file",
              "args": ["./logs/errors"]
            }]
          }
        }
      }
    }, {
      "plugin": {
        "register": "./web",
        "options": {
          "assetsPath": "./packages/web-app/build"
        }
      }
    }],
    "$default": [],
    "production": []
  }
}
