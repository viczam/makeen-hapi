{
  "name": "makeen-core",
  "version": "0.1.0",
  "engines": {
    "node": "6.x.x"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "watch": "babel-watch server.js",
    "babel-node": "babel-node",
    "debug": "babel-node --inspect server.js",
    "nodemon": "nodemon --exec npm run babel-node -- server.js",
    "start": "babel-node server.js",
    "clean": "rm -rf node_modules/ && rm -rf packages/*/node_modules",
    "clean-setup": "npm run clean && yarn",
    "lint": "eslint .",
    "open-monitor": "open http://localhost:3003/status-monitor"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/viczam/makeen-core.git"
  },
  "author": "Victor Zamfir <zamfir.victor@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/viczam/makeen-core/issues"
  },
  "homepage": "https://github.com/viczam/makeen-core#readme",
  "dependencies": {
    "bell": "~8.3.0",
    "catbox": "~7.1.2",
    "catbox-memory": "~2.0.4",
    "catbox-mongodb": "~3.0.0",
    "confidence": "~3.0.2",
    "dotenv": "~2.0.0",
    "environment-override": "1.0.2",
    "glue": "~4.0.0",
    "good": "~7.0.2",
    "good-console": "~6.1.3",
    "good-file": "~6.0.1",
    "good-squeeze": "~5.0.1",
    "hapi": "~15.2.0",
    "hapi-boom-decorators": "~2.1.0",
    "hoek": "~4.1.0",
    "moment": "~2.16.0",
    "npm-run-all": "~3.1.1",
    "pretty-format": "~4.3.1",
    "react": "~15.4.0",
    "scooter": "~4.0.0"
  },
  "devDependencies": {
    "babel-cli": "~6.18.0",
    "babel-core": "~6.18.2",
    "babel-eslint": "~7.1.1",
    "babel-plugin-transform-async-to-generator": "~6.16.0",
    "babel-plugin-transform-decorators-legacy": "~1.3.4",
    "babel-plugin-transform-object-rest-spread": "~6.19.0",
    "babel-plugin-transform-runtime": "~6.15.0",
    "babel-preset-es2015": "~6.18.0",
    "babel-preset-modern-node": "~3.2.0",
    "babel-preset-react": "~6.16.0",
    "babel-preset-react-hmre": "~1.1.1",
    "babel-preset-stage-0": "~6.16.0",
    "babel-watch": "~2.0.3",
    "core-decorators": "~0.14.0",
    "eslint": "~3.10.2",
    "eslint-config-airbnb": "~13.0.0",
    "eslint-import-resolver-webpack": "~0.7.0",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-jsx-a11y": "~2.2.3",
    "eslint-plugin-react": "~6.7.1",
    "lerna": "2.0.0-beta.30",
    "nodemon": "~1.11.0"
  },
  "babel": {
    "presets": [
      "modern-node",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-es2015-destructuring",
      "transform-object-rest-spread",
      "transform-async-to-generator",
      "transform-decorators-legacy"
    ],
    "env": {
      "development": {
        "presets": [
          "react-hmre"
        ]
      }
    }
  }
}
