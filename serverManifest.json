{
  "server": {
    "app": {
      "$filter": "env",
      "development": {
        "client": "http://localhost:3000",
        "api": "http://localhost:3003",
        "isDevelopment": true
      },
      "production": {
        "client": "http://localhost:3000",
        "api": "http://localhost:80",
        "isDevelopment": false
      }
    },
    "cache": {
      "engine": "../node_modules/catbox-mongodb",
      "uri": "mongodb://127.0.0.1:27017"
    },
    "useDomains": false
  },
  "connections": {
    "$filter": "env",
    "$default": [{
      "port": 3003,
      "labels": ["api"],
      "routes": {
        "cors": true
      }
    }],
    "production": [{
      "port": 80,
      "labels": ["api"],
      "routes": {
        "cors": true
      }
    }]
  },
  "registrations": {
    "$filter": "env",
    "$base": [{
      "plugin": {
        "register": "good",
        "options": {
          "ops": {
            "interval": 30000
          },
          "reporters": {
            "console": [{
              "module": "good-squeeze",
              "name": "Squeeze",
              "args": [{ "log": "*", "request": "*", "response": "*", "error": "*", "ops": "*" }]
            }, {
              "module": "good-console"
            }, "stdout"],
            "file": [{
              "module": "good-squeeze",
              "name": "Squeeze",
              "args": [{ "error": "*" }]
            }, {
              "module": "good-squeeze",
              "name": "SafeJson"
            }, {
              "module": "good-file",
              "args": ["./logs/errors"]
            }]
          }
        }
      }
    }, {
      "plugin": {
        "register": "hapi-boom-decorators"
      }
    }, {
      "plugin": {
        "register": "scooter"
      }
    }, {
      "plugin": {
        "register": "./core"
      }
    }, {
      "plugin": {
        "register": "./storage",
        "options": {
          "mongoDb" : {
            "db": "makeen",
            "port": 27017,
            "host": "127.0.0.1"
          }
        }
      }
    }, {
      "plugin": {
        "register": "./crud"
      }
    }, {
      "plugin": {
        "register": "./mailer",
        "options": {
          "transport": {
            "host": "mailtrap.io",
            "port": 2525,
            "auth": {
              "user": "bb83f0fe6f2c49",
              "pass": "12d89be1c17e4c"
            }
          },
          "saveToDisk": true,
          "emailsDir": "./emails"
        },
        "routes": {
          "prefix": "/emails"
        }
      }
    }, {
      "plugin": {
        "register": "bell"
      }
    }, {
      "plugin": {
        "register": "./user",
        "options": {
          "jwt": {
            "key": "I83At3WR1FaPTVoObwDWtXP19JucJWBmLLvT3K7XczEIceLzcrR1OyARV1Hs5z1"
          },
          "socialPlatforms": {
          }
        }
      }
    }, {
      "plugin": {
        "register": "./todo",
        "routes": {
          "prefix": "/todos"
        }
      }
    }],
    "$default": [],
    "development": [{
      "plugin": {
        "register": "./documentation"
      }
    }, {
      "plugin": {
        "register": "./monitoring",
        "options": {
        }
      }
    }],
    "production": []
  }
}
